			<if test="icon != null">
				and icon = #{icon}
			</if>
			<if test="weight != null">
				and weight = #{weight}
			</if>
			<if test="isShow != null">
				and is_show = #{isShow}
			</if>
		</where>
	</sql>
	
	<select id="findById" resultMap="BaseResultMap" parameterType="java.lang.String">
		select 
		<include refid="Base_Column_List" />
		from sys_job
