	<sql id="or_filters">
		<foreach collection="searchFilter.orFilters" item="orFilter" open="(" separator="or" close=")">
			<choose>
				<when test='orFilter.operator.info == "前缀模糊匹配"'>
					${orFilter.searchProperty} like concat('%', #{orFilter.value})
